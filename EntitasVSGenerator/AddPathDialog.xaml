<Window x:Class="EntitasVSGenerator.AddPathDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EntitasVSGenerator"
             mc:Ignorable="d"
             Width="550"
             SizeToContent="Height">
    <StackPanel >
        <Label Content="Add Path" DockPanel.Dock="Top" Margin="10,0,0,0"/>
        <DockPanel>
            <Button Content="..." MinWidth="40" DockPanel.Dock="Right" Margin="10,0,10,0" Click="Browse_Click"/>
            <TextBox x:Name="txtBoxPath" HorizontalAlignment="Stretch" Margin="10,0,0,0"/>
        </DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Button Content="Add" Margin="10,10,10,10" Click="Add_Click"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Button Content="Cancel" Margin="10,10,10,10" Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
